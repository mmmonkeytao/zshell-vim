#while
snippet wh
while (${1:/*condition */}) {
	${2:TODO}
}
endsnippet

#小括号
snippet b "bracket" i 
(${1})${2}
endsnippet 
# 方括号 square bracket，设定为 st 而非 sb，避免与 b 冲突
snippet st "square bracket" i 
[${1}]${2}
endsnippet 
# 大括号 brace 
snippet br "brace" i
{
	${1}
}${2}
endsnippet

# 单引号 single quote，设定为 se 而非 sq，避免与 q 冲突
snippet se "single quote" I
'${1}'${2}
endsnippet
# 双引号 quote
snippet q "quote" I
"${1}"${2}
endsnippet

